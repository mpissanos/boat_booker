<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th>Phone Number</th>
      <th colspan="2"></th>
    </tr>
  </thead>

<% @clients.each do |client|%> 
  <tr>
    <td><%= "#{client.name}" %></td>
    <td><%= "#{client.email}" %></td>
    <td><%= "#{client.phone_number}" %></td>
    <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-primary" %>
    </td>
    <div id="client-<%=client.id%>"></div>
    <td><%= link_to "Delete", client_path(client), class: "btn btn-primary", data: {:confirm => "Are you sure?"}, method: :delete %></td>
    <td>
      <button class="js-more btn btn-secondary" data-id="<%=client.id%>">More Info</button>
    </td>
  </tr>
    <% end %>
  </tbody>
</table>