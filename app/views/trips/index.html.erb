  %>

<div id="calender-container">
  <div id="calendar"></div>
</div>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Boat</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="tripList">
  <% @trips.each do |trip|%> 
    <tr>
      <td><%= "#{trip.date}" %></td>
      <td><%= "#{trip.location}" %></td>
      <td><%= "#{trip.trip_time}"  %></td>
      <td><%= "#{trip.end_time}"  %></td>
      <td><%= "#{trip.boat.name}" %></td>
      <td><%= link_to 'Edit', edit_trip_path(trip) %>
      </td>
      <td><%= link_to "Delete", trip_path(trip), data: {:confirm => "Are you sure?"}, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>


<script>
$(function() {
  $('#calendar').fullCalendar({
    events: '/trips'
    })
});
</script>

