<%= simple_form_for @trip do |f| %>
  <%= f.input   :date, as: :date, html5: true  %>
  <%= f.input  :location %>
  <%= f.input  :trip_length, collection: 1..8 %>
  <%= f.input  :price %>
  <%= f.input  :passengers, collection: 1..10 %>

  

  <%= f.input :boat_id, collection: @boats, input_html: { multiple: false, id: :boat_id } %>
  
  <p>Client Information</p>
 
    <%= f.simple_fields_for :client do |c| %> 
      <%= c.input :name %>
      <%= c.input :email %>
      <%= c.input :phone_number %>
    <% end %>
  <%= f.button :submit %>
<% end %>

